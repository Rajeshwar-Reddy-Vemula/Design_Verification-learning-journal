//generate a 64 element diagonal matrix 
//

class matrix; 
 rand int a[8][8]; 
    constraint c1 {foreach(a[i,j]) 
                if(i==j) 
                      a[i][j] == 1; 
                else 
                  a[i][j] == 0;} 
endclass 

module diagonal_matrix; 
  initial 
    begin 
     matrix diag; 
    diag = new; 
      assert(diag.randomize());
      $display("Array : %p", diag.a); 
  end 
endmodule

//
//
//constraint to generate Fibonacci Series
//

class fibonacci; 
rand int arr[]; 
  constraint c1 {arr.size == 10;} 
  constraint c2 { arr[0] == 0; arr[1] ==1;} 
  constraint c3 {foreach(arr[i]) 
if (i>=2) 
  arr[i] == arr[i-1]+arr[i-2];} 
endclass 

module fibo; 
  initial 
begin 
  fibonacci f1; 
f1 = new; 
  assert(f1.randomize()); 
  $display("Fibonacci Series : %p", f1.arr); 
end 
endmodule 

